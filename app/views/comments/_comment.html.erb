<%= turbo_frame_tag dom_id(comment) do %>
    <div class="flex items-start space-x-3 py-6 border-b">
        <%= profile_image(comment.user) %>
        <div class="flex-1">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                    <p class="font-semibold text-gray-900"><%= comment.user.username %></p>
                    <p class="text-gray-500 text-sm"><%= time_ago_in_words(comment.created_at) %> ago</p>
                </div>
                <% if user_signed_in? && current_user == comment.user %>
                    <%= button_to post_comment_path(comment.post, comment), method: :delete, class: "text-gray-500 hover:text-red-600" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    <% end %>
                <% end %>
            </div>
            <p class="mt-2 text-gray-800"><%= comment.body %></p>
        </div>
    </div>
<% end %>
