<%= render layout: "auth_layout", locals: { title: "Create your account" } do %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-5">
            <div>
                <%= f.label :username, "Username", class: label_class %>
                <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "johndoe", class: input_class %>
                <p class="mt-1 text-xs text-gray-500">This will be your unique handle on Tweeter</p>
            </div>

            <div>
                <%= f.label :email, "Email address", class: label_class %>
                <%= f.email_field :email, autocomplete: "email", placeholder: "you@example.com", class: input_class %>
            </div>

            <div>
                <%= f.label :password, "Password", class: label_class %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: input_class %>
                <% if @minimum_password_length %>
                    <p class="mt-1 text-xs text-gray-500">Must be at least <%= @minimum_password_length %> characters</p>
                <% end %>
            </div>

            <div>
                <%= f.label :password_confirmation, "Confirm password", class: label_class %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: input_class %>
            </div>
        </div>

        <div class="pt-2">
            <%= f.submit "Create account", class: button_class %>
        </div>

        <div class="relative">
            <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-white text-gray-500">or</span>
            </div>
        </div>

        <div class="text-center">
            <span class="text-sm text-gray-600">Already have an account?</span>
            <%= link_to "Sign in", new_session_path(resource_name), class: "text-sm #{link_button_class} ml-1" %>
        </div>
    <% end %>
<% end %>