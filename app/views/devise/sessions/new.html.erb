<%= render layout: "auth_layout", locals: { title: "Sign in to your account" } do %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { class: "space-y-6" }) do |f| %>
        <div class="space-y-5">
            <div>
                <%= f.label :email, "Email address", class: label_class %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: input_class %>
            </div>

            <div>
                <%= f.label :password, "Password", class: label_class %>
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: input_class %>
            </div>

            <% if devise_mapping.rememberable? %>
                <div class="flex items-center">
                    <%= f.check_box :remember_me, class: "h-4 w-4 text-sky-500 focus:ring-sky-500 border-gray-300 rounded" %>
                    <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
                </div>
            <% end %>
        </div>

        <div class="pt-2">
            <%= f.submit "Sign in", class: button_class %>
        </div>

        <div class="relative">
            <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-white text-gray-500">or</span>
            </div>
        </div>

        <div class="text-center">
            <span class="text-sm text-gray-600">Don't have an account?</span>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sm #{link_button_class} ml-1" %>
        </div>
    <% end %>
<% end %>
