<%= form_with model: post, data: { 
  controller: "reset-form character-counter", 
  action: "turbo:submit-end->reset-form#reset input->character-counter#updateCounter",
  character_counter_max_length_value: 240,
  character_counter_warning_length_value: 200
} do |form| %>
    <% if form.object.errors.any? %>
        <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-3">
            <h2><%= pluralize(form.object.errors.count, "error")%> prohibited this post from being saved:</h2>
            <ul>
                <% form.object.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end%>

    <div class="px-4 py-3">
        <div class="flex space-x-3">
            <%= profile_image(current_user, size: "small") if user_signed_in? %>
            <div class="flex-1">
                <%= form.text_area :body, 
                class: "w-full border-0 placeholder-gray-500 text-lg resize-none focus:outline-none focus:ring-0", 
                placeholder: "What is happening?!",
                rows: "2",
                data: { 
                    character_counter_target: "input",
                    action: "input->character-counter#updateCounter focus->character-counter#expandTextArea blur->character-counter#collapseTextArea"
                } %>
                
                <div class="flex justify-between items-center mt-3">
                    <div class="flex items-center space-x-3">
                        <button type="button" class="text-sky-500 hover:bg-sky-100 p-2 rounded-full transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </button>
                        <button type="button" class="text-sky-500 hover:bg-sky-100 p-2 rounded-full transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                            </svg>
                        </button>
                        <button type="button" class="text-sky-500 hover:bg-sky-100 p-2 rounded-full transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15.828 9.172a4 4 0 00-5.656 0M9 10h.01M15.828 9.172a4 4 0 00-5.656 0M9 10h.01M15.828 9.172a4 4 0 00-5.656 0" />
                            </svg>
                        </button>
                        <button type="button" class="text-sky-500 hover:bg-sky-100 p-2 rounded-full transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15.828 9.172a4 4 0 00-5.656 0M9 10h.01M15.828 9.172a4 4 0 00-5.656 0" />
                            </svg>
                        </button>
                    </div>
                    
                    <div class="flex items-center space-x-3">
                        <div data-character-counter-target="counter" class="text-gray-500 text-sm font-medium">
                            240
                        </div>
                        <%= form.submit "Post", 
                            class: "px-4 py-1.5 bg-sky-500 text-white font-semibold rounded-full text-center cursor-pointer hover:bg-sky-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed", 
                            disabled: true,
                            data: { character_counter_target: "submit_button" } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
