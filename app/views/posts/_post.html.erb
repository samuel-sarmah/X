<div class="px-6 py-3 hover:bg-gray-50 transition-colors duration-200" id="<%= dom_id(post) %>" data-controller="auto-refresh">
    <div class="flex pb-3 items-start space-x-3 ">
        <div class="flex-shrink-0">
            <%= profile_image(post.user) %>
        </div>
        <div class="flex-1">
            <div class="flex items-center space-x-2">
                <p class="font-bold"><%= link_to post.user.username, profile_path(post.user), class: "hover:underline", data: { turbo: false } %></p>
                <span class="text-gray-500 text-sm">Â·</span>
                <span class="text-gray-500 text-sm" title="<%= post.created_at.strftime("%B %d, %Y at %I:%M %p") %>">
                    <%= time_ago_in_words(post.created_at) %> ago
                </span>
            </div>
            <%= link_to post, data: { turbo: false } do %>
                <div class="prose prose-lg mt-2"><%= post.body %></div>
            <% end %>            

            <ul class="-ml-3 flex space-x-14 items-start justify-start list-none">
                <li>
                    <% if user_signed_in? %>
                        <% if post.likes.exists?(user: current_user) %>
                            <%= link_to post_likes_path(post), 
                                class: "text-red-500 space-x-2 group flex items-center justify-center", 
                                method: :delete,
                                data: { turbo: true } do %>
                                <div class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-red-50">
                                    <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 fill-current"><g><path d="M12 21.638h-.014C9.403 21.59 1.95 14.856 1.95 8.478c0-3.064 2.525-5.754 5.403-5.754 2.29 0 3.83 1.58 4.646 2.73.814-1.148 2.354-2.73 4.645-2.73 2.88 0 5.404 2.69 5.404 5.755 0 6.376-7.454 13.11-10.037 13.157H12zM7.354 4.225c-2.08 0-3.903 1.988-3.903 4.255 0 5.74 7.034 11.596 8.55 11.658 1.518-.062 8.55-5.917 8.55-11.658 0-2.267-1.823-4.255-3.903-4.255-2.528 0-3.94 2.936-3.952 2.965-.23.562-1.156.562-1.387 0-.014-.03-1.425-2.965-3.954-2.965z"></path></g></svg>
                                </div>
                                <span id="post-likes-<%= post.id %>" class="group-hover:text-red-500"><%= render "posts/likes", post: post %></span>
                            <% end %>
                        <% else %>
                            <%= link_to post_likes_path(post), 
                                class: "text-gray-500 space-x-2 group flex items-center justify-center", 
                                method: :post,
                                data: { turbo: true } do %>
                                <div class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-red-50">
                                    <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 group-hover:text-red-500"><g><path d="M12 21.638h-.014C9.403 21.59 1.95 14.856 1.95 8.478c0-3.064 2.525-5.754 5.403-5.754 2.29 0 3.83 1.58 4.646 2.73.814-1.148 2.354-2.73 4.645-2.73 2.88 0 5.404 2.69 5.404 5.755 0 6.376-7.454 13.11-10.037 13.157H12zM7.354 4.225c-2.08 0-3.903 1.988-3.903 4.255 0 5.74 7.034 11.596 8.55 11.658 1.518-.062 8.55-5.917 8.55-11.658 0-2.267-1.823-4.255-3.903-4.255-2.528 0-3.94 2.936-3.952 2.965-.23.562-1.156.562-1.387 0-.014-.03-1.425-2.965-3.954-2.965z"></path></g></svg>
                                </div>
                                <span id="post-likes-<%= post.id %>" class="group-hover:text-red-500 text-gray-500"><%= render "posts/likes", post: post %></span>
                            <% end %>
                        <% end %>
                    <% else %>
                        <div class="text-gray-500 space-x-2 group flex items-center justify-center">
                            <div class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-red-50">
                                <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 group-hover:text-red-500"><g><path d="M12 21.638h-.014C9.403 21.59 1.95 14.856 1.95 8.478c0-3.064 2.525-5.754 5.403-5.754 2.29 0 3.83 1.58 4.646 2.73.814-1.148 2.354-2.73 4.645-2.73 2.88 0 5.404 2.69 5.404 5.755 0 6.376-7.454 13.11-10.037 13.157H12zM7.354 4.225c-2.08 0-3.903 1.988-3.903 4.255 0 5.74 7.034 11.596 8.55 11.658 1.518-.062 8.55-5.917 8.55-11.658 0-2.267-1.823-4.255-3.903-4.255-2.528 0-3.94 2.936-3.952 2.965-.23.562-1.156.562-1.387 0-.014-.03-1.425-2.965-3.954-2.965z"></path></g></svg>
                            </div>
                            <span id="post-likes-<%= post.id %>" class="group-hover:text-red-500 text-gray-500"><%= render "posts/likes", post: post %></span>
                        </div>
                    <% end %>
                    <li>
                        <% if user_signed_in? && current_user != post.user %>
                            <%= link_to repost_post_path(post), 
                                class: "text-gray-500 space-x-2 group flex items-center justify-center", 
                                data: { turbo_method: :post } do %>
                                <div class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-green-50">
                                    <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 fill-current group-hover:text-green-500"><g><path d="M23.77 15.67c-.292-.293-.767-.293-1.06 0l-2.22 2.22V7.65c0-2.068-1.683-3.75-3.75-3.75h-5.85c-.414 0-.75.336-.75.75s.336.75.75.75h5.85c1.24 0 2.25 1.01 2.25 2.25v10.24l-2.22-2.22c-.293-.293-.768-.293-1.06 0s-.294.768 0 1.06l3.5 3.5c.145.147.337.22.53.22s.383-.072.53-.22l3.5-3.5c.294-.292.294-.767 0-1.06zm-10.66 3.28H7.26c-1.24 0-2.25-1.01-2.25-2.25V6.46l2.22 2.22c.148.147.34.22.532.22s.384-.073.53-.22c.293-.293.293-.768 0-1.06l-3.5-3.5c-.293-.294-.768-.294-1.06 0l-3.5 3.5c-.294.292-.294.767 0 1.06s.767.293 1.06 0l2.22-2.22V16.7c0 2.068 1.683 3.75 3.75 3.75h5.85c.414 0 .75-.336.75-.75s-.337-.75-.75-.75z"></path></g></svg>
                                </div>
                                <span class="group-hover:text-green-500 text-gray-500">Repost</span>
                            <% end %>
                        <% else %>
                            <div class="text-gray-400 space-x-2 group flex items-center justify-center">
                                <div class="flex items-center justify-center w-10 h-10 rounded-full">
                                    <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 fill-current text-gray-400"><g><path d="M23.77 15.67c-.292-.293-.767-.293-1.06 0l-2.22 2.22V7.65c0-2.068-1.683-3.75-3.75-3.75h-5.85c-.414 0-.75.336-.75.75s.336.75.75.75h5.85c1.24 0 2.25 1.01 2.25 2.25v10.24l-2.22-2.22c-.293-.293-.768-.293-1.06 0s-.294.768 0 1.06l3.5 3.5c.145.147.337.22.53.22s.383-.072.53-.22l3.5-3.5c.294-.292.294-.767 0-1.06zm-10.66 3.28H7.26c-1.24 0-2.25-1.01-2.25-2.25V6.46l2.22 2.22c.148.147.34.22.532.22s.384-.073.53-.22c.293-.293.293-.768 0-1.06l-3.5-3.5c-.293-.294-.768-.294-1.06 0l-3.5 3.5c-.294.292-.294.767 0 1.06s.767.293 1.06 0l2.22-2.22V16.7c0 2.068 1.683 3.75 3.75 3.75h5.85c.414 0 .75-.336.75-.75s-.337-.75-.75-.75z"></path></g></svg>
                                </div>
                                <span class="text-gray-400">Repost</span>
                            </div>
                        <% end %>
                    </li>
                    <li>
                        <a href="" class="text-gray-500 space-x-2 group flex items-center justify-center">
                            <div class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-rose-50f">
                                 <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 fill-current group-hover:text-rose-500"><g><path d="M12 21.638h-.014C9.403 21.59 1.95 14.856 1.95 8.478c0-3.064 2.525-5.754 5.403-5.754 2.29 0 3.83 1.58 4.646 2.73.814-1.148 2.354-2.73 4.645-2.73 2.88 0 5.404 2.69 5.404 5.755 0 6.376-7.454 13.11-10.037 13.157H12zM7.354 4.225c-2.08 0-3.903 1.988-3.903 4.255 0 5.74 7.034 11.596 8.55 11.658 1.518-.062 8.55-5.917 8.55-11.658 0-2.267-1.823-4.255-3.903-4.255-2.528 0-3.94 2.936-3.952 2.965-.23.562-1.156.562-1.387 0-.014-.03-1.425-2.965-3.954-2.965z"></path></g></svg>
                            </div>
                            <span class="group-hover:text-rose-500 text-gray-500f">3</span>
                        </a>
                    </li>
                </li>
                <% if user_signed_in? && current_user == post.user %>
                    <li>
                        <%= button_to post_path(post), method: :delete, form: { data: {turbo_confirm: "Are you sure? Please note that this action is irreversable!" } }, class: "text-gray-500 space-x-2 group flex items-center justify-center" do %>
                            <div class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-gray-50">
                                <svg viewBox="0 0 24 24" aria-hidden="true" class="fill-current text-gray-500 group-hover:text-rose-500 w-5 h-5"><g><path d="M20.746 5.236h-3.75V4.25c0-1.24-1.01-2.25-2.25-2.25h-5.5c-1.24 0-2.25 1.01-2.25 2.25v.986h-3.75c-.414 0-.75.336-.75.75s.336.75.75.75h.368l1.583 13.262c.216 1.193 1.31 2.027 2.658 2.027h8.282c1.35 0 2.442-.834 2.664-2.072l1.577-13.217h.368c.414 0 .75-.336.75-.75s-.335-.75-.75-.75zM8.496 4.25c0-.413.337-.75.75-.75h5.5c.413 0 .75.337.75.75v.986h-7V4.25zm8.822 15.48c-.1.55-.664.795-1.18.795H7.854c-.517 0-1.083-.246-1.175-.75L5.126 6.735h13.74L17.32 19.732z"></path><path d="M10 17.75c.414 0 .75-.336.75-.75v-7c0-.414-.336-.75-.75-.75s-.75.336-.75.75v7c0 .414.336.75.75.75zm4 0c.414 0 .75-.336.75-.75v-7c0-.414-.336-.75-.75-.75s-.75.336-.75.75v7c0 .414.336.75.75.75z"></path></g></svg>
                            </div>
                        <% end %>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>