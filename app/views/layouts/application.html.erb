<!DOCTYPE html>
<html>
   <%= render "shared/head" %>

  <body class="font-sans font-normal leading-normal text-gray-800 bg-white flex flex-col min-h-screen ">

    <header class="bg-white border-b sticky top-0 z-50">
      <%= render "shared/flash_notice" %>
      <% if user_signed_in? %>
        <div class="lg:hidden px-4 py-3 flex items-center justify-between">
          <%= link_to root_path, class:"text-2xl font-black" do %>
            <span class="text-sky-500">X</span>
          <% end %>
          <%= profile_image(current_user, size: "small") %>
        </div>
      <% end %>
    </header>

    <main class="flex-grow container mx-auto px-4">
      <div class="grid lg:grid-cols-12 grid-cols-1 h-screen pr-6">
        <div class="lg:col-span-2 pt-6 pr-6">
          <%= link_to root_path, class:"link text-xl tracking-tight font-black" do %>
            <span class="text-sky-500">X</span>
          <% end %>

          <% if user_signed_in? %>
            <%= link_to profile_path(current_user), class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg transition ease-in-out duration-500" do %>
              <svg class="fill-current w-6 h-6 mr-4" viewBox="0 0 24 24" aria-hidden="true"><g><path d="M12 11.816c1.355 0 2.872-.15 3.84-1.256.814-.93 1.078-2.368.806-4.392-.38-2.825-2.117-4.512-4.646-4.512S7.734 3.343 7.354 6.17c-.272 2.022-.008 3.46.806 4.39.968 1.107 2.485 1.256 3.84 1.256zM8.84 6.368c.162-1.2.787-3.212 3.16-3.212s2.998 2.013 3.16 3.212c.207 1.55.057 2.627-.45 3.205-.455.52-1.266.743-2.71.743s-2.255-.223-2.71-.743c-.507-.578-.657-1.656-.45-3.205zm11.44 12.868c-.877-3.526-4.282-5.99-8.28-5.99s-7.403 2.464-8.28 5.99c-.172.692-.028 1.4.395 1.94.408.52 1.04.82 1.733.82h12.304c.693 0 1.325-.3 1.733-.82.424-.54.567-1.247.394-1.94zm-1.576 1.016c-.126.16-.316.246-.552.246H5.848c-.235 0-.426-.085-.552-.246-.137-.174-.18-.412-.12-.654.71-2.855 3.517-4.85 6.824-4.85s6.114 1.994 6.824 4.85c.06.242.017.48-.12.654z"></path></g></svg>
              <span>Profile</span>
            <% end %>
          <% end %>
          
          <ul class="mt-6 space-y-2">
            <li>
              <%= link_to root_path, class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg transition ease-in-out duration-500" do %>
                <svg class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                <span>Home</span>
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to "#", class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg transition ease-in-out duration-500" do %>
                  <svg class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                  </svg>
                  <span>Bookmarks</span>
                <% end %>
              </li>
              <li>
                <%= link_to "#", class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg transition ease-in-out duration-500" do %>
                  <svg class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                  <span>Lists</span>
                <% end %>
              </li>
              <li>
                <%= link_to "#", class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg transition ease-in-out duration-500" do %>
                  <svg class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                  <span>Communities</span>
                <% end %>
              </li>
              <li>
                <%= link_to "#", class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg transition ease-in-out duration-500" do %>
                  <svg class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                  <span>Video</span>
                <% end %>
              </li>
              <li>
                <%= link_to "#", class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg transition ease-in-out duration-500" do %>
                  <svg class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                  </svg>
                  <span>Spaces</span>
                <% end %>
              </li>
              <li>
                <%= link_to "#", class: "rounded-full px-4 -ml-4 inline-flex items-center py-3 hover:bg-neutral-50 w-full text-lg bg-sky-50 font-bold text-sky-600" do %>
                  <svg class="w-6 h-6 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Premium</span>
                <% end %>
              </li>
            <% end %>
          </ul>
          
          <!-- Premium Button -->
          <% if user_signed_in? %>
            <div class="mt-6 mb-4">
              <%= link_to "#", class: "w-full bg-sky-500 text-white rounded-full py-3 px-4 font-medium hover:bg-sky-600 transition-colors flex items-center justify-center space-x-2" do %>
                <%# <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.468 3.515L12 1 4.532 3.515c-.912.303-1.532 1.158-1.532 2.121v9.728c0 .963.62 1.818 1.532 2.121L12 21l7.468-3.515c.912-.303 1.532-1.158 1.532-2.121V5.636c0-.963-.62-1.818-1.532-2.121zM12 16.5l-4.5-2.121v-6.858L12 9.5l4.5 2.121v6.858L12 16.5z"/>
                </svg> %>
                <span>Subscribe to Premium</span>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="lg:col-span-6 border-x">
          <%= content_for?(:content) ? yield(:content) : yield %>
        </div>
        <div class="lg:col-span-4 pl-6 pt-6 space-y-6">
          <% if user_signed_in? %>
            <div class="bg-gray-50 rounded-2xl p-4">
              <h3 class="font-bold text-lg mb-3">Trending</h3>
              <div class="space-y-3">
                <div class="hover:bg-gray-100 p-2 rounded-lg cursor-pointer transition-colors">
                  <p class="text-sm text-gray-500">Trending in Technology</p>
                  <p class="font-bold">#Rails</p>
                  <p class="text-sm text-gray-500">1,234 posts</p>
                </div>
                <div class="hover:bg-gray-100 p-2 rounded-lg cursor-pointer transition-colors">
                  <p class="text-sm text-gray-500">Trending in Web Development</p>
                  <p class="font-bold">#Hotwire</p>
                  <p class="text-sm text-gray-500">892 posts</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-50 rounded-2xl p-4">
              <h3 class="font-bold text-lg mb-3">Who to follow</h3>
              <div class="space-y-3">
                <% User.where.not(id: current_user.id).limit(3).each do |user| %>
                  <div class="flex items-center justify-between hover:bg-gray-100 p-2 rounded-lg transition-colors">
                    <div class="flex items-center space-x-3">
                      <%= profile_image(user, size: "small") %>
                      <div>
                        <p class="font-bold hover:underline cursor-pointer"><%= user.username %></p>
                        <p class="text-sm text-gray-500">@<%= user.username %></p>
                      </div>
                    </div>
                    <%= link_to "Follow", "#", class: "bg-black text-white px-4 py-1 rounded-full text-sm hover:bg-gray-800 transition-colors" %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="rounded-2xl p-4 bg-gray-50">
              <div class="flex items-center space-x-3 mb-3">
                <%= profile_image(current_user, size: "small") %>
                <div class="flex-1">
                  <p class="font-bold"><%= current_user.username %></p>
                  <p class="text-sm text-gray-500">@<%= current_user.username %></p>
                </div>
              </div>
              <div class="flex space-x-2 text-sm text-gray-500">
                <span><%= current_user.posts.count %> posts</span>
                <span>·</span>
                <span><%= User.count - 1 %> following</span>
                <span>·</span>
                <span>Followers</span>
              </div>
              <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "w-full mt-3 border border-gray-300 rounded-full py-2 text-sm font-medium hover:bg-gray-100 transition-colors", data: { turbo: false } %>
            </div>
          <% else %>
            <div class="bg-gray-50 rounded-2xl p-6">
              <h2 class="text-xl font-bold mb-4">Welcome to X</h2>
              <p class="text-gray-600 mb-6">Connect with friends and share your thoughts with the world.</p>
              <div class="space-y-3">
                <%= link_to "Sign in", new_user_session_path, class: "w-full bg-black text-white rounded-full py-3 text-center font-medium hover:bg-gray-800 transition-colors block" %>
                <%= link_to "Sign up", new_user_registration_path, class: "w-full border border-gray-300 rounded-full py-3 text-center font-medium hover:bg-gray-100 transition-colors block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </body>
</html>
